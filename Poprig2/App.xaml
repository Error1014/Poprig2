<Application x:Class="Poprig2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Poprig2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TitleText">
            <Setter Property="TextBlock.FontSize" Value="25"/>
            <Setter Property="TextBlock.Foreground" Value="#43DCFE"/>
            <Setter Property="TextBlock.FontFamily" Value="Comic Sans MS"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextBlock.FontFamily" Value="Comic Sans MS"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="TextBox.FontFamily" Value="Comic Sans MS"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Button.FontFamily" Value="Comic Sans MS"/>
        </Style>
    </Application.Resources>
</Application>
